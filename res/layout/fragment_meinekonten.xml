                <TextView
                    android:id="@+id/kontostand2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" >

                <TextView
                    android:id="@+id/blz2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </TableRow>
        </TableLayout>
        
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="0dp" >

            <TableRow
                android:id="@+id/tableRow48"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="0dp"
                android:gravity="right" >

                <ImageView
                    android:id="@+id/updatekonto2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="10dp"
                    android:visibility="invisible"
                    android:onClick="UmsatzKontoEins"
                    android:src="@drawable/refresh" />

                <ImageView
                    android:id="@+id/umsatzkonto2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:visibility="invisible"
                    android:onClick="UmsatzKontoEins"
                    android:src="@drawable/umsatz" />
            </TableRow>
        </TableLayout>
        
        <!-- Konto 2 ENDE -->

        <View
            android:id="@+id/trennstrich2"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:background="@android:color/darker_gray" />

        <!-- Konto 3 -->

        <TextView
            android:id="@+id/bankname3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp" >

